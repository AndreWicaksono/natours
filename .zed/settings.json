{
  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": true,
          "lint": true,
          "unstable": false,
          "suggest": {
            "imports": {
              "autoDiscover": true,
              "autoImports": true,
              "hosts": {
                "https://deno.land": true,
                "https://cdn.jsdelivr.net": true,
                "https://esm.sh": true,
                "https://x.nest.land": true
              }
            }
          }
        }
      }
    }
  },
  "languages": {
    "JavaScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": "language_server"
    },
    "TypeScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": "language_server"
    },
    "TSX": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": "language_server"
    }
  },
  "tab_size": 2,
  "use_spaces": true
}
